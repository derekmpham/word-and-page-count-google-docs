{
	"name": "Word and Page Count for Google Docs",
	"version": "1.2",
	"manifest_version": 2,
	"web_accessible_resources": ["statusbar.html"],

	"description": "Status bar display of word and page count for Google Docs.",
	"background" : { "page": "background.html" },
		
	"page_action" :
	{
		"default_icon" : "icon.png",
		"default_title" : "Ready to count words and pages in Google doc"
	},
	"content_scripts": [
	{
		"matches": ["https://docs.google.com/document/*"],
		"js": ["main.js"],
		"run_at": "document_idle"
	}
	],
	"icons": {
		"48": "48.png",
		"128": "128.png"
	},

	"options_page": "fancy-settings/source/index.html"
}
