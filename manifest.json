{
	"name": "Word Count for Google Docs",
	"version": "1.0",
	"manifest_version": 2,
	"web_accessible_resources": ["statusbar.html"],

	"description": "Status bar display for Google Docs.",
	"background" : { "scripts": ["background.js"] },
		
	"page_action" :
	{
		"default_icon" : "icon.png",
		"default_title" : "Ready to count words in Google doc"
	},
	"content_scripts": [
	{
		"matches": ["https://docs.google.com/document/*"],
		"js": ["main.js"],
		"run_at": "document_idle"
	}
	],
	"icons": {
		"48": "48.png",
		"128": "128.png"
	}
}
